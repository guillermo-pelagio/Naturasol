    <script src="https://cdnjs.cloudflare.com/ajax/libs/html5-qrcode/2.3.4/html5-qrcode.min.js" integrity="sha512-k/KAe4Yff9EUdYI5/IAHlwUswqeipP+Cp5qnrsUjTPCgl51La2/JhyyjNciztD7mWNKLSXci48m7cctATKfLlQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

    <script>

        const scanner = new Html5QrcodeScanner('reader', {
            // Scanner will be initialized in DOM inside element with id of 'reader'
            qrbox: {
                width: 250,
                height: 250,
            },  // Sets dimensions of scanning box (set relative to reader element width)
            fps: 20, // Frames per second to attempt a scan
        });


        scanner.render(success, error);
        // Starts scanner

        function success(result) {

            document.getElementById('result').innerHTML = `
        <h2>Success!</h2>
        <p><a href="${result}">${result}</a></p>
        `;
            // Prints result as a link inside result element

            scanner.clear();
            // Clears scanning instance

            document.getElementById('reader').remove();
            // Removes reader element from DOM since no longer needed

        }

        function error(err) {
            console.error(err);
            // Prints any errors to the console
        }

        var ipvalida = 0;
        /*
        fetch('https://api.ipify.org?format=json')
            .then(response => response.json())
            .then(data => {

                if ((data.ip == '186.216.38.130') || (data.ip == '177.247.5.70') || (data.ip == '186.96.17.120') || (data.ip == '201.121.254.175') || (data.ip == '148.230.227.101') || (data.ip == '187.208.168.17') || (data.ip == '201.149.0.118') || (data.ip == '189.162.249.194') ) {
                    ipvalida = 1;
                }
                else {
                    ipvalida = 0;
                }
            })
            .catch(error => {
            });
        */
        $(document).ready(function () {
            if (window.location.href.includes("mielmex")) {
                $("#logomielmex").show();
                $("#logonaturasol").hide();
            }
            else {

                $("#logonaturasol").show();
                $("#logomielmex").hide();
            }
        });

        $(document).ready(function () {
            $('#passwordLogin').keypress(function (event) {
                var keycode = (event.keyCode ? event.keyCode : event.which);
                if (keycode == '13') {
                    iniciarsesion();
                }
            });
        });

        function iniciarsesion()
        {
            var isCorrect = true;

            if ($("#passwordLogin").val().length == 0) {
                swal("", "Debes indicar una contraseña", "warning");
                isCorrect = false;
            }
            if ($("#nameLogin").val().length == 0) {
                swal("", "Debes indicar su usuario", "warning");
                isCorrect = false;
            }

            if (isCorrect) {
                var Usuario = {
                    nameUsuario: $("#nameLogin").val(),
                    contrasena: $("#passwordLogin").val(),
                    accesoPublico: ipvalida
                }

                $('#overlay').css('display', 'flex');
                //ACCION PARA VALIDAR EL INICIO DE SESION
                jQuery.ajax({
                    url: '@Url.Action("inicio_sesion", "inicio")',
                    type: "POST",
                    data: JSON.stringify({ usuario: Usuario }),
                    contentType: "application/json; charset=utf-8",
                    success: function (resultado) {
                        $('#overlay').css('display', 'none');
                        if (resultado == 1) {
                            swal("", "Bienvenido!", "success")
                                .then((value) => {
                                    window.location.href = '/inicio/inicio/';
                                });
                        }
                        else if (resultado == 2) {
                            swal("", "Usuario dado de baja!", "error")
                                .then((value) => {
                                    window.location.reload(false);
                                });
                        }
                        else if (resultado == 3) {
                            swal("", "Usuario en validación!", "error")
                                .then((value) => {
                                    window.location.reload(false);
                                });
                        }
                        else if (resultado == 4) {
                            swal("", "Completa tu información!", "success")
                                .then((value) => {
                                    window.location.href = '/inicio/mi_cuenta/';
                                });
                        }
                        else if (resultado == 10) {
                            swal("", "No puedes acceder de manera publica!", "success")
                                .then((value) => {
                                    window.location.href = '/inicio/mi_cuenta/';
                                });
                        }
                        else {
                            swal("", "Datos incorrectos!", "error")
                                .then((value) => {
                                    window.location.reload(false);
                                });
                        }
                    },
                    error: function () {
                        $('#overlay').css('display', 'none');
                        swal("", "Error al iniciar sesión! Comuniquese a sistemas", "error")
                            .then((value) => {
                                window.location.reload(false);
                            });
                    },
                })
            }
        }
    </script>
</body>

