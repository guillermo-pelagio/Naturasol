
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Recuperar contraseña</title>
    <link rel="stylesheet" href="~/Content/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Content/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Content/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Content/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/Content/images/logo.png" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body>
    <div id=overlay class="align-items-center h-100 justify-content-center" style="display:none">
        <div class="row align-items-center" id="imgLoad">
            <div class="offset-lg-6 col-lg-4 col-md-4 col-sm-12">
                <img src="~/Content/images/loading.gif" alt="Cargando">
            </div>
        </div>
    </div>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0" style="background-color: #e8eef1">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="text-center brand-logo">
                                <img src="~/Content/images/logo.png" alt="logo" style="width:70px">
                                <img src="~/Content/images/logobordes.png" alt="logo" style="width:100px;">
                            </div>
                            <h4 class="text-center">Recupera tu contraseña</h4>

                            <form class="pt-3">
                                <div class="form-group row">
                                    <input type="email" class="form-control form-control-lg" id="correoRegistro" placeholder="Correo electrónico">
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" onclick="recuperarContrasena()">Recuperar contraseña</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Ya tengo una cuenta <a href="@Url.Action("login","inicio")" class="text-primary">Iniciar sesión</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Content/js/off-canvas.js"></script>
    <script src="~/Content/js/hoverable-collapse.js"></script>
    <script src="~/Content/js/template.js"></script>
    <script src="~/Content/js/settings.js"></script>
    <script src="~/Content/js/todolist.js"></script>

    <script>
        function recuperarContrasena()
        {
            var isCorrect = true;

            if ($("#correoRegistro").val().length == 0) {
                swal("", "Debes indicar un correo", "warning");
                isCorrect = false;
            }

            if (isCorrect) {
                var Usuario = {
                    correo: $("#correoRegistro").val()
                }

                $('#overlay').css('display', 'flex');
                //ACCION DE GUARDADO DE USUARIO
                jQuery.ajax({
                    url: '@Url.Action("recuperar_contrasena", "Usuarios")',
                    type: "POST",
                    data: JSON.stringify({ usuario: Usuario }),
                    dataType: "json",
                    contentType: "application/json; charset=utf-8",
                    success: function (resultado) {
                        $('#overlay').css('display', 'none');
                        if (resultado == 1) {
                            swal("", "Contraseña enviada correctamente!", "success")
                                .then((value) => {
                                    window.location.href = '/inicio/login/';
                                });
                        }
                        else if (resultado == 0) {
                            swal("", "Correo no encontrado, se redirigira al registro de usuario!", "error")
                                .then((value) => {
                                    window.location.href = '/inicio/registro/';
                                });
                        }
                    },
                    error: function () {
                        $('#overlay').css('display', 'none');
                        swal("", "Hubo un error al recuperar la contraseña!", "error")
                            .then((value) => {
                                window.location.reload(false);
                            });
                    },
                })
            }
        }
    </script>
</body>

</html>
