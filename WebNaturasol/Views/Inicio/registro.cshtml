
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Nuevo registro</title>
    <link rel="stylesheet" href="~/Content/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/Content/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/Content/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/Content/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/Content/images/logo.png" />
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</head>

<body>
    <div id=overlay class="align-items-center h-100 justify-content-center" style="display:none">
        <div class="row align-items-center" id="imgLoad">
            <div class="offset-lg-6 col-lg-4 col-md-4 col-sm-12">
                <img src="~/Content/images/loading.gif" alt="Cargando">
            </div>
        </div>
    </div>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0" style="background-color: #e8eef1">
                <div class="row w-100 mx-0">
                    <div class="col-lg-6 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="text-center brand-logo">
                                <img src="~/Content/images/logo.png" alt="logo" style="width:70px">
                                <img src="~/Content/images/logobordes.png" alt="logo" style="width:100px;">
                            </div>
                            <h4 class="text-center">Registrate</h4>
                            <h6 class="text-center font-weight-light">Llena los siguientes campos</h6>
                            <form class="pt-3">
                                <div class="form-group row">
                                    <label for="nombreRegistro" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Nombre</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="nombreRegistro" placeholder="Nombre">
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-top: 1rem">
                                    <label for="paternoRegistro" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Apellido paterno</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="paternoRegistro" placeholder="Apellido paterno">
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-top: 1rem">
                                    <label for="maternoRegistro" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Apellido materno</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control" id="maternoRegistro" placeholder="Apellido materno">
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-top: 1rem">
                                    <label for="maternoUsuario" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Correo electrónico</label>
                                    <div class="col-sm-9">
                                        <input type="email" class="form-control form-control-lg" id="correoRegistro" placeholder="Correo electrónico">
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-top: 1rem">
                                    <label for="maternoUsuario" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Contraseña</label>
                                    <div class="col-sm-9">
                                        <input type="password" class="form-control form-control-lg" id="contrasenaRegistro" placeholder="Contraseña">
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-top: 1rem">
                                    <label for="ubicacionRegistro" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Ubicación</label>
                                    <div class="col-sm-9">
                                        <select class="custom-select" id="ubicacionRegistro" style="color: black;">
                                            <option value="0">Seleccione una opción</option>
                                            <option value="1">Corporativo</option>
                                            <option value="2">Cereales</option>
                                            <option value="3">Semillas</option>
                                            <option value="4">Barras</option>
                                            <option value="5">Untables</option>
                                            <option value="1005">Tultepark</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-top: 1rem">
                                    <label for="departamentoRegistro" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Departamento</label>
                                    <div class="col-sm-9">
                                        <select class="custom-select" id="departamentoRegistro" style="color: black;">
                                            <option value="2">Ventas</option>
                                            <option value="3">Compras</option>
                                            <option value="4">Contabilidad</option>
                                            <option value="5">Importaciones</option>
                                            <option value="6">Logistica</option>
                                            <option value="7">Facturación</option>
                                            <option value="8">Recursos Humanos</option>
                                            <option value="9">Almacén</option>
                                            <option value="10">Producción</option>
                                            <option value="11">Recursos Humanos</option>
                                            <option value="1">Sistemas</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group row" style="padding-top: 1rem">
                                    <label for="puestoRegistro" class="col-sm-3 col-form-label" style="padding-bottom: 0px;">*Puesto</label>
                                    <div class="col-sm-9">
                                        <input type="text" class="form-control form-control-lg" id="puestoRegistro" placeholder="Puesto">
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <a class="btn btn-block btn-primary btn-lg font-weight-medium auth-form-btn" onclick="registroUsuario()">Registrate</a>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Ya tengo una cuenta <a href="@Url.Action("login","inicio")" class="text-primary">Iniciar sesión</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/Content/js/off-canvas.js"></script>
    <script src="~/Content/js/hoverable-collapse.js"></script>
    <script src="~/Content/js/template.js"></script>
    <script src="~/Content/js/settings.js"></script>
    <script src="~/Content/js/todolist.js"></script>

    <script>
        function registroUsuario()
        {
            var isCorrect = true;

            if ($("#contrasenaRegistro").val().length == 0) {
                swal("", "Debes indicar una contraseña", "warning");
                isCorrect = false;
            }
            if ($("#correoRegistro").val().length == 0) {
                swal("", "Debes indicar un correo", "warning");
                isCorrect = false;
            }
            if ($("#nombreRegistro").val().length == 0) {
                swal("", "Debes indicar un nombre", "warning");
                isCorrect = false;
            }
            if ($("#paternoRegistro").val().length == 0) {
                swal("", "Debes indicar un apellido paterno", "warning");
                isCorrect = false;
            }
            if ($("#maternoRegistro").val().length == 0) {
                swal("", "Debes indicar un apellido materno", "warning");
                isCorrect = false;
            }
            if ($("#ubicacionRegistro").val().length == 0) {
                swal("", "Debes indicar una ubicación", "warning");
                isCorrect = false;
            }
            if ($("#departamentoRegistro").val().length == 0) {
                swal("", "Debes indicar un departamento", "warning");
                isCorrect = false;
            }

            if (isCorrect) {
                var Usuario = {
                    correo: $("#correoRegistro").val(),
                    contrasena: $("#contrasenaRegistro").val(),
                    nombre: $("#nombreRegistro").val(),
                    apellidoPaterno: $("#paternoRegistro").val(),
                    apellidoMaterno: $("#maternoRegistro").val(),
                    departamento: $("#departamentoRegistro").val(),
                    usuarioCreacion: 0,
                    ubicacion: $("#ubicacionRegistro").val(),
                    telefono: $("#telefonoRegistro").val(),
                    extension: $("#extensionRegistro").val(),
                    estatus: 2
                }

                $('#overlay').css('display', 'flex');
                //ACCION DE GUARDADO DE USUARIO
                jQuery.ajax({
                    url: '@Url.Action("guardar_usuarios", "Usuarios")',
                    type: "POST",
                    data: JSON.stringify({ usuario: Usuario }),
                    contentType: "application/json; charset=utf-8",
                    success: function (resultado) {
                        if (resultado == 1) {
                            $('#overlay').css('display', 'none');
                            swal("", "Registro completado correctamente!", "success")
                                .then((value) => {
                                    window.location.href = '/inicio/login';
                                });
                        }
                        else {
                            $('#overlay').css('display', 'none');
                            swal("", "Ya existe un usuario con ese correo!", "warning")
                                .then((value) => {
                                    window.location.href = '/inicio/login';
                                });
                        }
                    },
                    error: function () {
                        $('#overlay').css('display', 'none');
                        swal("", "Hubo un error al realizar el registro!", "error")
                            .then((value) => {
                                window.location.reload(false);
                            });
                    },
                })
            }
        }
    </script>
</body>

</html>
