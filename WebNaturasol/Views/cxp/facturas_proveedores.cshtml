
@{
    ViewBag.Title = "facturas_proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 style="text-align: center">Entradas pendientes registro</h3>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="col-lg-12 grid-margin stretch-card">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-hover" id="tablaEntradas" style="width: 100%">
                                                <thead>
                                                    <tr>
                                                        <th>Proveedor</th>
                                                        <th>No. Entrada</th>
                                                        <th>Estatus registro</th>
                                                        <th>Fecha entrada</th>
                                                        <th>Referencia</th>
                                                        <th>Total</th>
                                                        <th>Moneda</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section scripts
{
    <script>

        tablaEntradas = $("#tablaEntradas").DataTable({
            paging: true,
            ordering: false,
            info: true,
            lengthChange: false,
            pageLength: 25,
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Spanish.json"
            },

            "ajax": {
                url: '@Url.Action("obtener_entradas_global", "cxp")',
                type: "GET",
                dataType: "json",
            },
            dom: 'Bfrtip',
            buttons: [
                {
                    extend: 'excelHtml5',
                    title: 'Entradas por compra',
                    exportOptions:
                    {
                        columns: [0, 1, 2, 3, 4, 5, 6]
                    }
                },],
            "columns": [                
                { data: 'CardName' },
                { data: 'DocNum' },
                {
                    data: 'estatus', "render": function (estatus) {
                        if (estatus == "1") {
                            return '<span class="badge badge-secondary">EN PROCESO</span>'
                        }
                        else if (estatus == "2") {
                            return '<span class="badge badge-danger">MONEDA DIFERENTE AL DE LA ENTRADA</span>'
                        }
                        else if (estatus == "3") {
                            return '<span class="badge badge-danger">TOTAL DIFERENTE AL DE LA ENTRADA</span>'
                        }
                        else if (estatus == "4") {
                            return '<span class="badge badge-danger">SUBTOTAL DIFERENTE AL DE LA ENTRADA</span>'
                        }
                        else if (estatus == "5") {
                            return '<span class="badge badge-danger">RFC EMISOR DIFERENTE AL DE LA ENTRADA</span>'
                        }
                        else if (estatus == "6") {
                            return '<span class="badge badge-danger">RFC RECEPTOR DIFERENTE AL DE LA ENTRADA</span>'
                        }
                        else if (estatus == "0") {
                            return '<span class="badge badge-success">FACTURA VALIDA</span>'
                        }
                        else {
                            return '<span class="badge badge-light">SIN REGISTRO</span>'
                        }
                    }
                },
                { data: 'DocDate' },
                { data: 'NumAtCard' },
                { data: 'leyendaTotal' },
                { data: 'DocCur' }
            ]/*,
            "createdRow": function (row, data, dataIndex) {
                if (data.PCO < data.POF) {
                    $('td', row).css("background-color", "#e7a3a3");
                }
            },*/
        });

    </script>
}
