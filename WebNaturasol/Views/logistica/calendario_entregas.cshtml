
@{
    ViewBag.Title = "calendario_entrega";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 style="text-align: center">Calendario de entregas</h3>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-resumen" role="tabpanel" aria-labelledby="pills-resumen-tab">
                                <button type="button" class="btn btn-primary" onclick="buscarKardex()" data-dismiss="modal" style="width: 8rem; height: 2rem;" data-toggle="tooltip" data-placement="top" title="Buscar inventario">Filtrar</button>
                                <div class="col-lg-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body" style="margin-top: 0rem; padding: 0rem">
                                            <div class="table-responsive">
                                                <table class="table table-hover" id="tablaCalendario" style="width: 100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Estatus</th>
                                                            <th>OC</th>
                                                            <th>CLIENTE</th>
                                                            <th>PLANTA</th>
                                                            <th>UPC</th>
                                                            <th>CODIGO SAP</th>
                                                            <th>DESCRIPCION SAP</th>
                                                            <th>CANTIDAD SOLICITADA</th>
                                                            <th>UM</th>
                                                            <th>Fecha y Hora Cita Destino</th>
                                                            <th>CONFIRMACION</th>
                                                            <th>OBSERVACIONES</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--VISTA DE MODAL-->
<div class="modal fade" id="modalBuscarKardex" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 50rem">
        <div class="modal-content">
            @if (Convert.ToString(Session["sociedad"]) == "MIEL MEX")
            {
                <div class="modal-header" style="background-color: #ffa5008c" id="encabezadoBuscarInventario">
                    <h5 class="modal-title" id="exampleModalLabel">Buscar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
            else
            {
                <div class="modal-header" style="background-color: lightgreen" id="encabezadoBuscarInventario">
                    <h5 class="modal-title" id="exampleModalLabel">Buscar</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }


            <div class="modal-body">
                <div class="form-group row">
                    <label for="correoTicketEdit" class="col-sm-4 col-form-label">Artículo:</label>
                    <div class="col-sm-8">
                        <input type="text" maxlength="12" class="form-control" id="articulo">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="correoTicketEdit" class="col-sm-4 col-form-label">Descripción:</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="descripcion">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="departamentoTicketEdit" class="col-sm-4 col-form-label">OC:</label>
                    <div class="col-sm-8">
                        <input type="number" class="form-control" id="oc">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="loteEdit" class="col-sm-4 col-form-label">Nombre cliente:</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" id="cliente">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="loteEdit" class="col-sm-4 col-form-label">De / a (Fecha cita):</label>
                    <div class="col-sm-4">
                        <input type="date" class="form-control" id="fechaInicio">
                    </div>
                    <div class="col-sm-4">
                        <input type="date" class="form-control" id="fechaFin">
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button type="button" id="btnBuscar" onclick="busquedaCalendario()" class="btn btn-success">Consultar</button>
                </div>

            </div>
        </div>
    </div>
</div>

