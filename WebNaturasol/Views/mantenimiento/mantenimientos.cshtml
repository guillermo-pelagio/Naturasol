
@{
    ViewBag.Title = "Mantenimiento";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h3 style="text-align: center">Mantenimientos</h3>
                        <div class="tab-content" id="pills-tabContent">
                            <div class="tab-pane fade show active" id="pills-resumen" role="tabpanel" aria-labelledby="pills-resumen-tab">
                                <button type="button" class="btn btn-primary" onclick="nuevoMantenimiento()" data-dismiss="modal" data-toggle="tooltip" data-placement="top" title="Nuevo mantenimiento">Nuevo mantenimiento</button>
                                <div class="col-lg-12 grid-margin stretch-card">
                                    <div class="card">
                                        <div class="card-body" style="margin-top: 0rem; padding: 0rem">

                                            <div class="table-responsive">
                                                <table class="table table-hover" id="tablaMantenimientos" style="width: 100%">
                                                    <thead>
                                                        <tr>
                                                            <th>Planta</th>
                                                            <th>Tipo</th>
                                                            <th>Equipo</th>
                                                            <th>Estatus</th>
                                                            <th>Fecha</th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<!--VISTA DE MODAL-->
<div class="modal fade" id="modalCrearMantenimiento" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog" style="max-width: 50rem">
        <div class="modal-content">
            <div class="modal-header" style="background-color: #ffa5008c" id="encabezadoMantenimiento">
                <h5 class="modal-title" id="exampleModalLabel">Nuevo mantenimiento</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group row">
                    <label for="idTipoMtto" class="col-sm-4 col-form-label">Tipo:</label>
                    <div class="col-sm-8">
                        <select class="custom-select" id="idTipoMtto">
                            <option value="0">Seleccione una opción</option>
                            <option value="1">Preventivo</option>
                            <option value="2">Correctivo</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="correoTicketEdit" class="col-sm-4 col-form-label">Equipo:</label>
                    <div class="col-sm-8">
                        <select class="custom-select" id="idEquipoMtto">
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="correoTicketEdit" class="col-sm-4 col-form-label">Inicio:</label>
                    <div class="col-sm-8">
                        <input type="datetime-local" class="form-control" id="inicioMtto" format-value="yyyy-MM-ddTHH:mm">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="correoTicketEdit" class="col-sm-4 col-form-label">Fin:</label>
                    <div class="col-sm-8">
                        <input type="datetime-local" class="form-control" id="finMtto" format-value="yyyy-MM-ddTHH:mm">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="departamentoTicketEdit" class="col-sm-4 col-form-label">Componentes:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="componenteMtto">
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Agregar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Agregar</button>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="departamentoTicketEdit" class="col-sm-4 col-form-label">SDC:</label>
                    <div class="col-sm-4">
                        <input type="text" class="form-control" id="sdcMtto">
                    </div>
                    <div class="col-sm-4">
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Agregar</button>
                        <button type="button" class="btn btn-danger" data-dismiss="modal">Agregar</button>
                    </div>
                </div>
                <br />
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <button type="button" id="btnBuscarInventario" onclick="busquedaInventario()" class="btn btn-success">Consultar</button>
                </div>

            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script>
        function nuevoMantenimiento() {
            $("#modalCrearMantenimiento").modal("show");
        }
    </script>
}
