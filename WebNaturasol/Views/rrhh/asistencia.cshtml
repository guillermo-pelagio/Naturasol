        function guardarRegistro() {

            var isCorrect = true;

            if ($("#numeroEmpleado").val().length == 0) {
                swal("", "Debes indicar un número de empleado", "warning");
                isCorrect = false;
            }

            if (isCorrect) {
                jQuery.ajax(
                    {
                        url: '@Url.Action("validar_sesion", "Inicio")',
                        type: "POST",
                        dataType: "json",
                        success: function (resultado) {
                            $('#overlay').css('display', 'none');
                            if (resultado == 1) {
                                $('#overlay').css('display', 'flex');
                                var componente = {
                                    numeroEmpleado: $("#numeroEmpleado").val()
                                }
                                jQuery.ajax(
                                    {
                                        url: '@Url.Action("guardar_asistencia", "rrhh")',
                                        type: "POST",
                                        data: componente,
                                        success: function (resultado) {
                                            swal({
                                                title: "",
                                                text: "Registro correcto!",
                                                type: "success",
                                                timer: 500
                                            }).then((value) => {
                                                window.location.reload(false);
                                            });
                                            /*
                                            swal("", "Registro correcto!", "success")
                                                .then((value) => {
                                                    window.location.reload(false);
                                                });
                                                */
                                        },
                                        error: function (xhr, status, error) {
                                            swal("", "Error al guardar el registro!", "error")
                                                .then((value) => {
                                                    window.location.reload(false);
                                                });
                                        },
                                    });
                            }
                            else {
                                alert('Sesion caducada');
                                window.location.reload(false);
                            }
                        },
                        error: function () {
                            $('#overlay').css('display', 'none');
                            swal("", "Sesión expirada!", "error")
                                .then((value) => {
                                    window.location.reload(false);
                                });
                        },
                    });
            }
        }
    </script>
