@{
    ViewBag.Title = "especificaciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using CapaPresentacion.Models
@model List<Archivo>


<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover" id="tablaUsuarios" style="width: 100%">
                                <tr>
                                    <th>Especificaciones</th>
                                    <th></th>
                                </tr>
                                @foreach (Archivo file in Model)
                                {
                                    <tr>
                                        <td>@file.FileName</td>
                                        <td>@Html.ActionLink("Descargar", "descargarEspecificacion", new { fileName = file.FileName })</td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


